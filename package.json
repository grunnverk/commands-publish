{
  "name": "@eldrforge/commands-publish",
  "version": "0.1.4-dev.0",
  "description": "Publishing workflow commands for kodrdriv (development, publish, release)",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "guide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/commands-publish.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run clean && npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "kodrdriv",
    "publish",
    "release",
    "development",
    "npm",
    "commands"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@eldrforge/core": "^0.1.3",
    "@eldrforge/commands-git": "^0.1.4",
    "@eldrforge/commands-tree": "^0.1.3",
    "@eldrforge/git-tools": "^0.1.22",
    "@eldrforge/github-tools": "^0.1.21",
    "@eldrforge/ai-service": "^0.1.21",
    "@eldrforge/shared": "^0.1.10",
    "@riotprompt/riotprompt": "^0.0.10",
    "openai": "^6.3.0",
    "semver": "^7.6.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^25.0.3",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "0.27.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13"
  }
}
